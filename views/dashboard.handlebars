<section>
  <div class="dash container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-12">
        {{#if loggedIn}}
        <table class="table table-striped m-0 border table-hover">
          {{#if password}}
          <thead class="thead-dark scroll">
            <tr>
              <th class="head text-white bg-danger col-lg-2 col-md-2 col-sm-2" id="main" scope="col">Website</th>
              <th class="text-white bg-danger col-lg-3 col-md-3 col-sm-3" id="main" scope="col">Username</th>
              <th class="text-white bg-danger col-lg-3 col-md-3 col-sm-3" id="main" scope="col">Password</th>
              <th class="text-white bg-danger col-lg-1 col-md-2 col-sm-2" id="main" scope="col">Update</th>
              <th class="head-2 text-white bg-danger col-lg-1 col-md-2 col-sm-2" id="main"scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
          {{#each password}}
            <tr class="buttonList">
              <td class="web">{{this.title}}</td>
              <td class="name">{{this.username}}</td>
              <td class="password" type="password" href="/passwords/{{password.id}}">●●●●●●●●<button class="btn btn-danger ms-3 Copy" data-id="{{this.id}}">Copy</button></td>
              <td class="updateB"><button class="btn btn-danger ms-3 update">Update</button></td>
              <td class="deleteB"><button data-id="{{this.id}}" class="btn btn-danger ms-3 delete">Delete</button></td>
            </tr>
            {{!-- This is just extra table content to test appearance --}}
            {{!-- <tr>
              <td><a href="https://www.instagram.com/">https://www.instagram.com/</a></td>
              <td>test123</td>
              <td>passw0rd123!<button class="btn btn-danger ms-3">Copy</button></td>
            </tr>
            <tr>
              <td><a href="https://www.instagram.com/">https://www.instagram.com/</a></td>
              <td>test123</td>
              <td>passw0rd123!<button class="btn btn-danger ms-3">Copy</button></td>
            </tr> --}}
            {{/each}}
          </tbody>
        </table>
        <a class="passwordBtn btn btn-danger margin-auto" href="dashboard/new">Add Password</a>
        {{else}}
        <p>Your dashboard is empty. Click the button below to add a password.</p>
        <a class="btn btn-danger text-align-center" href="dashboard/new">Add Password</a>
        {{/if}}
        {{else}}
        <a href="/login">You must login first to view saved passwords.</a>
        {{/if}}
      </div>
    </div>
  </div>

<style>
  
  @media screen and (max-width: 600px) {

    .navbar {
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        width: 100%;
    }

    .dash {
        padding-top: 100px;
        overflow-x: scroll;
        overflow-y: hidden;
        width: 750px;
        z-index: 0;
        /* height: 100%; */
    }
    
  }
</style>

<script src="/js/dashboard.js"></script>